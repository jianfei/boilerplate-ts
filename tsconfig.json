{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
        "module": "esNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "dist",
        "webpack"
    ]
}
